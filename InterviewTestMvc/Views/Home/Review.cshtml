@model InterviewTestMvc.Reviews

@{
    ViewData["Title"] = "Review";
}



<div class="row ">
    <div class="col-md-4 border mx-auto">
        <h3>LEAVE A REVIEW</h3>
        <form asp-action="Review">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="BookId" class="form-control" value="@ViewBag.bookid" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review" class="control-label"></label><span class="text-danger">*</span>
                <textarea asp-for="Review" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Review" class="text-danger"></span>
            </div>
            <div class="form-group w-25">
                <label asp-for="Rating" class="control-label"></label><span class="text-danger">*</span>
                <input asp-for="Rating" class="form-control" min="1" max="5" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <input type="datetime" asp-for="ReviewedOn" class="form-control" value=@DateTime.Now style="display:none" />


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index">Back to List</a>
    </div>
</div>



